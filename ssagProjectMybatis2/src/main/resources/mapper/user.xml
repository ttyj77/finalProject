<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssag.dao.UserDao">
	<resultMap id='userResult' type="userVo">
		<result property="code" column="code" />
		<result property="id" column="id" />
		<result property="password" column="password" />
		<result property="name" column="name" />
		<result property="email" column="email" />
		<result property="telephone" column="telephone" />
		<result property="address" column="address" />
		<result property="companycode" column="companycode" />
		<result property="companyname" column="companyname" />
		<result property="frigeidid" column="frigeidid" />
		<result property="birth" column="birth" />

	</resultMap>

	<insert id="insertUser" parameterType="userVo">
	<![CDATA[
			
			insert into users(id,password,role,name,email,telephone,address)
			value(#{id},#{password},#{role},#{name},#{email},#{telephone},#{address});
			
		]]>
	</insert>

	<select id="readAccount" parameterType="String"
		resultType="com.ssag.model.UserVo">
		SELECT * FROM users WHERE ID= #{id}
	</select>


</mapper>

